/**文字样式**/
.video-content .content-info {
  padding: 441.8rpx 50rpx 20rpx 50rpx;
  margin-bottom: 20rpx;
  width: 650rpx;
}
.video-content .item-title {
  display: block;
  font-size:45rpx;
  line-height:2;
  cursor: pointer;
}
.video-content .item-title .item-title-p {
  display: inline-block;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.video-content .item-content {
  color:#666;
  font-size:34rpx;
  line-height:2;
  min-height: 100rpx;
  cursor: pointer;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
}
.video-content .item-create {
  margin-top:30rpx;
  display:block;
  font-size:30rpx;
  color:#999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  cursor: pointer;
}

/**视频展示样式**/
.video-content video{
  width: 750rpx;
  height: 421.8rpx;
  z-index: 9999;
  position: absolute;
  left: 0;
}

/**分享icon**/
.video-content .video_share {
  float: right;
  color: #666;
  border:none;
  padding:10rpx 15rpx;
  margin:0rpx;
  line-height:70rpx;
}

