.content-page video {
  width: 100%;
}
.content-page .content-info {
  padding: 20rpx 50rpx;
  margin-top: 30rpx;
}

.content-page .content-info .title {
  display: block;
  font-size:45rpx;
  line-height:2;
}

.content-page .content-info .desc {
  color:#666;
  font-size:34rpx;
  display:block;
  line-height:2;
  min-height: 100rpx;
}

.content-page .content-info .date {
  margin-top:20rpx;
  display:block;
  font-size:30rpx;
  color:#999999;
}

.content-page .recommend-content {
  border-top: 1px solid rgba(0, 0, 0, 0.3);
  margin: 10rpx 50rpx;
  padding: 10rpx 0;
}

.content-page .recommend-content .recommend-scroll-box {
  white-space: nowrap;
  margin-top: 10rpx;
}

.content-page .recommend-content .recommend-title {
  display: block;
  font-size: 25rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-page .recommend-content .recommend-video {
  width:250rpx;
  height:144rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.content-page .recommend-content .recommend-video .recommend-image-wrapper {
  width: 250rpx;
  height: 144rpx;
  background-color: #000;
  display: flex;
  align-items: center;
}
.content-page .recommend-content .recommend-video .recommend-image-wrapper image {
  width: 250rpx;
  flex: 1;
}